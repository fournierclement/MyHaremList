<!DOCTYPE html>
<html>
<head>
    <title>MyHaremList</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/MHL.css">
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">
                <span>
                    <img class="mhl-logo" src="/logo.svg" alt="MHL logo" >
                    MyHaremList
                </span>
            </a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/search">
                    <span class="glyphicon glyphicon-search"> Search
                    </span>
                    </a>
                </li>
            </ul>
            <section name="user-pan">
                <% if (!logs.logged) { %>
    <!-- This all part of the nav bar is displayed for visitor-->
                    <div name="logger">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="/user">
                                    <span class="glyphicon glyphicon-user">
                                    </span> Sign Up
                                </a>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    <span class="glyphicon glyphicon-log-in"> Login
                                    </span>
                                    <span class="caret">
                                    </span>
                                </a>
                                <ul class="dropdown-menu">
                                    <form  action="/login" method="post">
                                        <li>
                                            <input type="text" name="nickname" placeholder="Nickname" required>
                                        </li>
                                        <li>
                                            <input type="password" name="password" placeholder="Password" required>
                                        </li>
                                        <li>
                                            <input type="submit" value="Login">
                                        </li>
                                    </form>
                                </ul>
                            </li>
                        </ul>
                    </div>
                <% }; %>
                <% if (logs.logged) { %>
    <!-- This whole part of the nav bar is displayed for logged-->
                <div name="logged">
                          <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    <span class="glyphicon glyphicon-user"> <%= logs.login%>
                                    </span>
                                    <span class="caret">
                                    </span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="/user/<%= logs.login %>">My Profile</a>
                                    </li>
                                    <li>
                                        <form action="/logout" method="get">
                                            <a onclick="$(this).parent().submit();"> 
                                                <span class="glyphicon glyphicon-log-out">
                                                </span>
                                                Log out
                                            </a>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                </div>
    <!-- End of alternatives part -->
                <% }; %>
            </section>
        </div>
    </div>
</nav>
<header class="bright-head">
    <div class="bright-cell">
    <h1><%= harem.haremname %></h1>
    <h3>harem of <%= harem.haremowner %>
    </div>
    <p>
        <%= harem.haremdesc %>
    </p>
</header>
<section class="bright-board">
    <div class="panel-group" id="accordion">
        <% for ( i = 0 ; i < harem.weddings.length ; i++) { %>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%=i %>">
                        <%= harem.weddings[i].charname %>
                        </a>
                    </h2>
                </div>
                <div id="collapse<%=i %>" class="panel-collapse collapse in">
                    <div class="panel-body">
                    <%= harem.weddings[i].weddesc %>
                        <a href="/characs/<%= harem.weddings[i].charid %>">
                        -> <%= harem.weddings[i].charname %>
                        </a>
                    </div>
                </div>
            </div>
      <% } %>
    </div> 
</section>
</body>
</html>